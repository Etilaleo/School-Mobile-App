<resources >
    <!-- Base application theme. -->
    <style name="Theme.EsmMobile" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/esm_color</item>
        <item name="colorPrimaryVariant">@color/esm_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="noActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/esm_color</item>
        <item name="colorPrimaryVariant">@color/esm_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="button">
        <item name="backgroundColor">@color/esm_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="bottomNavView">
        <item name="itemIconTint">#E0E6F3</item>
        <item name="itemTextColor">#E0E6F3</item>
    </style>

    <style name="background_nav_bar">
        <item name="android:background">@color/milk</item>
    </style>

    <style name="materialColor">
        <item name="android:backgroundTint">@color/esm_red</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="guestButtonStyle">
        <item name="android:backgroundTint">@color/esm_color</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="textProfileLight" parent="ThemeOverlay.Material3.AutoCompleteTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textProfileBold" parent="ThemeOverlay.Material3.AutoCompleteTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="applyMaterialColor">
        <item name="android:backgroundTint">#E0E6F3</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="imageSlider">
        <item name="android:background">#E0E6F3</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>