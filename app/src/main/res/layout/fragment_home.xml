<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    tools:context=".ui.mainScreen.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/esm_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/homeToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:titleTextColor="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/good_morning_leonard"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="15dp"/>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/homeImageSliding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@color/esm_color"
            app:layout_constraintTop_toBottomOf="@id/appBarLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <TextView
                android:id="@+id/latestNews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/latest_news"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/materialCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/latestNews">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.denzcoskun.imageslider.ImageSlider
                        android:id="@+id/image_slider"
                        android:background="#E0E6F3"
                        android:layout_width="wrap_content"
                        android:layout_height="170dp"
                        app:iss_auto_cycle="true"
                        app:iss_delay="1000"
                        app:iss_period="1000"
                        app:iss_text_align="CENTER"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/homeImageSliding">


            <TextView
                android:id="@+id/assignmentsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/assignments"
                android:textColor="#757575"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/no_assignments"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:contentDescription="@string/no_assignments"
                android:src="@drawable/no_assignments_for_home"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/assignmentsText" />

            <TextView
                android:id="@+id/no_assignments_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_assignments"
                android:textColor="#A6A6A6"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/no_assignments" />

            <TextView
                android:id="@+id/eventsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/events"
                android:textColor="#757575"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/no_assignments_text" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/eventsForHomeRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/eventsText" />

            <TextView
                android:id="@+id/eventsSeeMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/see_more"
                android:textColor="#757575"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/eventsForHomeRecycler"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <View
            android:id="@+id/divideLine"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#DFDEDE"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mainLayout"/>


        <ImageView
            android:id="@+id/contactHodIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/contact_hod"
            android:layout_margin="17dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/contact_head_of_department"
            app:layout_constraintTop_toBottomOf="@id/divideLine"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/contactHod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contact_head_of_department"
            android:textSize="16sp"
            android:layout_marginStart="12dp"
            android:textColor="#757575"
            app:layout_constraintStart_toEndOf="@+id/contactHodIcon"
            app:layout_constraintTop_toTopOf="@id/contactHodIcon"
            app:layout_constraintBottom_toBottomOf="@id/contactHodIcon"/>


        <View
            android:id="@+id/contactHodDivide"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="#DFDEDE"
            android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@id/contactHod"
            app:layout_constraintStart_toStartOf="@id/contactHod"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/viewResultIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/view_reuslt"
            android:layout_margin="15dp"
            android:contentDescription="@string/view_result"
            app:layout_constraintTop_toBottomOf="@id/contactHodDivide"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/viewResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_result"
            android:textSize="16sp"
            android:textColor="#757575"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@+id/viewResultIcon"
            app:layout_constraintTop_toTopOf="@id/viewResultIcon"
            app:layout_constraintBottom_toBottomOf="@id/viewResultIcon"/>


        <!--            <View-->
        <!--                android:id="@+id/contactUsDivide"-->
        <!--                android:layout_width="0dp"-->
        <!--                android:layout_height="1dp"-->
        <!--                android:background="#DFDEDE"-->
        <!--                android:layout_marginTop="17dp"-->
        <!--                app:layout_constraintTop_toBottomOf="@id/contactUs"-->
        <!--                app:layout_constraintStart_toStartOf="@id/contactUs"-->
        <!--                app:layout_constraintEnd_toEndOf="parent"/>-->

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>