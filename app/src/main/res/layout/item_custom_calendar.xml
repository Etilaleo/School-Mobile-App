<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_1"
        android:textSize="14sp"
        android:paddingStart="13dp"
        android:paddingEnd="13dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="#7A7A7A"
        android:background="@drawable/calender_day_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <ImageView
        android:id="@+id/eventMarker"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:src="@drawable/event_marker"
        android:contentDescription="@string/event_marker"
        app:layout_constraintStart_toStartOf="@id/dayTextView"
        app:layout_constraintEnd_toEndOf="@id/dayTextView"
        app:layout_constraintBottom_toBottomOf="@id/dayTextView"
        app:layout_constraintTop_toTopOf="@id/dayTextView"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintHorizontal_bias="0.5"/>


</androidx.constraintlayout.widget.ConstraintLayout>